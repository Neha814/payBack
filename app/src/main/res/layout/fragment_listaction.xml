<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/emailid"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Person sending money to" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/emailid"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="email id" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/emailid"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="amount sending" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_dop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_dop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/emailid"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="date of PAYBACK" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_paybackamt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_paybackamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/emailid"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="PAYBACK amount" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/lay_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:weightSum="2"
            android:visibility="visible">

            <Button android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                />

            <Button android:id="@+id/btn_decline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>